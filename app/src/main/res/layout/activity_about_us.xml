<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout_a"
    android:fitsSystemWindows="true"
    tools:context=".About_usActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">



        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/yellow_m2"
            app:title=" "
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            >

            <ImageButton
                android:id="@+id/back_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00ffffff"
                android:src="@drawable/ic_back"
                />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_gravity="end"
            android:text="نبذة عنا"
            android:textColor="@color/d1"
            android:textSize="18sp"
            android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>



      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:id="@+id/layout_info"
          android:layout_below="@+id/toolbar_about"
          >

          <TextView
              android:layout_marginTop="20dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="end"
              android:text="دلني: "
              android:textColor="@color/black"
              android:textSize="25dp"
              android:textStyle="bold"
              app:drawableEndCompat="@drawable/ic_star" />
          <TextView
              android:layout_marginTop="20dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="end"
              android:text="هو تطبيق حكومي يهدف الى تسهيل البحث والسير في الإجراءات الحكومية والحصول على المعلومات الخاصه بها من أشاء من جمعوعة طلاب من جامعة مؤتة. "
              android:textColor="@color/black"
              android:textSize="17dp"
              android:paddingEnd="5dp"
              android:paddingStart="5dp"
             />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="end"
              android:layout_marginTop="20dp"
              android:text=" المشرف:"
              android:textColor="@color/black"
              android:textSize="23dp"
              android:textStyle="bold"
              app:drawableEndCompat="@drawable/ic_baseline_person" />
          <TextView
              android:layout_marginTop="20dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="end"
              android:text="د.أحمد العبادلة"
              android:textColor="@color/black"
              android:textSize="20dp"
              app:drawableEndCompat="@drawable/ic_baseline_arrow_back_24"
              />
          <TextView
              android:layout_marginTop="20dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="end"
              android:text="الطلاب:"
              android:textColor="@color/black"
              android:textSize="23dp"
              android:textStyle="bold"
              android:drawableEnd="@drawable/ic_baseline_people_24"
              />
          <TextView
              android:layout_marginTop="20dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="end"
              android:text="فؤاد بسام أبوعواد"
              android:textColor="@color/black"
              android:textSize="20dp"
              app:drawableEndCompat="@drawable/ic_baseline_arrow_back_24"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="end"
              android:layout_marginTop="20dp"
              android:text="سبأ فايز الطراونه"
              android:textColor="@color/black"
              android:textSize="20dp"
              app:drawableEndCompat="@drawable/ic_baseline_arrow_back_24" />

          <TextView
              android:layout_marginTop="20dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="end"
              android:text="ديالا عمر الحنيطي"
              android:textColor="@color/black"
              android:textSize="20dp"
              app:drawableEndCompat="@drawable/ic_baseline_arrow_back_24" />
          <TextView
              android:layout_marginTop="20dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="end"
              android:text="عمر بسام بني كنانة"
              android:textColor="@color/black"
              android:textSize="20dp"
              app:drawableEndCompat="@drawable/ic_baseline_arrow_back_24" />












      </LinearLayout>





    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/drawer_view_a"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header_menu"
        app:menu="@menu/nav_side_menu"

        />
</androidx.drawerlayout.widget.DrawerLayout>