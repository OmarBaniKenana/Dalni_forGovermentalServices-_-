<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/image_frame1"
    android:padding="5dp"
    android:layout_marginTop="6dp"
    android:id="@+id/history_layout">


    <TextView
        android:id="@+id/txt1_his"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is Demo Name"
        android:textColor="#000"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="7dp"
        android:layout_gravity="end"
        android:textStyle="bold"
        app:drawableEndCompat="@drawable/ic_bookmark" />

    <TextView
        android:id="@+id/txt2_his"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="This is Course Name"
        android:layout_gravity="start"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="7dp"
        android:textColor="#000"
        android:textSize="20sp"
        android:drawablePadding="3dp"
        app:drawableStartCompat="@drawable/ic_time_1" />

</LinearLayout>