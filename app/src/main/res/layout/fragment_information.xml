<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/info_iv_1"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:background="@drawable/image_frame1"
                android:scaleType="fitCenter"
                android:src="@drawable/googleplay" />

            <TextView
                android:id="@+id/info_tv_t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="اسم المؤسسة: "
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="3dp"
                app:drawableEndCompat="@drawable/ic_baseline_business_24" />

            <TextView
                android:id="@+id/info_tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="نص"
                android:layout_marginEnd="3dp"
                android:textColor="@color/black"
                android:textSize="22sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/yellow_m2" />

            <TextView
                android:id="@+id/info_tv_t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="اسم الخدمة:"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="3dp"

                app:drawableEndCompat="@drawable/ic_baseline_receipt_long_24" />

            <TextView
                android:id="@+id/info_tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="3dp"
                android:text="نص"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/yellow_m2" />


            <TextView
                android:id="@+id/info_tv_t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="الوثائق مطلوبة:"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="3dp"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/ic_baseline_assignment_24" />

            <TextView
                android:id="@+id/info_tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"

                android:text="."
                android:layout_marginEnd="3dp"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/yellow_m2" />


            <TextView
                android:id="@+id/info_tv_t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="الإجراءات :"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="3dp"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/ic_baseline_miscellaneous_services_24" />

            <TextView
                android:id="@+id/info_tv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"

                android:text="."
                android:textColor="@color/black"
                android:layout_marginEnd="3dp"
                android:textSize="22sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/yellow_m2" />

            <TextView
                android:id="@+id/info_tv_t5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="الرسوم المالية:"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="3dp"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/ic_baseline_attach_money_24" />

            <TextView
                android:id="@+id/info_tv_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"

                android:text="."
                android:layout_marginEnd="3dp"
                android:textColor="@color/black"
                android:textSize="22sp" />

        </LinearLayout>
    </ScrollView>


</FrameLayout>